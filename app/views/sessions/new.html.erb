<nav class="navbar navbar-dark bg-dark cotainer-fluid">
    <h1 class="navbar-brand px-2">Gift Card Application</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <form class="form-inline m-3 text-end">
            <%= link_to "Signup" , signup_path, method: :get, class: "text-light bg-dark text-decoration-none" %><br>
        </form>
    </div>
</nav>
<div class="container card col-sm-4 p-2">
    <h1>Login</h1>
    <div>
    <%= form_with(scope: :session, url: login_path, method: :post) do |f| %>
        <div class="fadeIn first">
        <%= f.label :username, class:"fadeIn second" %><br/>
        <%= f.text_field :username, class: "form-control" %>
        </div>
        
        <div class="form-outline mb-4">
        <%= f.label :password, class:"fadeIn second"%><br/>
        <%= f.password_field :password, class: "form-control"%>
        </div>
        
        <div class="d-flex justify-content-center align-item-center">
        <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
    
    <% end %>
    </div>
</div>