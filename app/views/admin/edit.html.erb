<div class="container card col-sm-4 my-4 p-4">
    <h3>Update Order</h3>
    <%= form_for :order do |f| %>
    <div class="mb-3">
        <label class="mb-2">Delivery Status</label>
        <%= f.text_field :delivery_status, autofocus: true, class: "form-control" %>
    </div>
    <div class="mb-3 d-flex justify-content-center">
        <%= f.submit "Update Order", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>

