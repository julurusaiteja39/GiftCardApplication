<nav class="navbar navbar-dark bg-dark cotainer-fluid">
    <h1 class="navbar-brand px-2">Gift Card Application</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">   
        <form class="form-inline p-3 text-end">
            <%= link_to "Login" , login_path, method: :get, class: "text-light bg-dark text-decoration-none"  %>
        </form>
    </div>
</nav>
<h1>Signup</h1>
<%= form_with(model: @user,url: '/users', local: true) do |f| %>
 
    <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
        <%= f.label :confirm_password %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
        <%= f.submit :Register %>
    </div>
 
<% end %>